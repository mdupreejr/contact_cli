# ContactsPlus API Credentials
# Get these from your ContactsPlus developer account
CONTACTSPLUS_CLIENT_ID=your_client_id_here
CONTACTSPLUS_CLIENT_SECRET=your_client_secret_here

# OAuth Configuration
OAUTH_REDIRECT_URI=http://localhost:3000/callback
OAUTH_PORT=3000
OAUTH_SCOPES=contacts.read,account.read,contacts.write

# API Configuration
CONTACTSPLUS_API_BASE=https://api.contactsplus.com
CONTACTSPLUS_AUTH_BASE=https://app.contactsplus.com

# Optional: Debug settings
# DEBUG=true

# Optional: Custom port for OAuth callback
# OAUTH_PORT=3001